/* Mobile first queries */
@import 'wp'
@import 'reset'
@import 'skeleton'
@import 'fontface'

$black = #000
$white = #fff
$off-white = #f1f2f2
$clear-white = rgba(255,255,255,.3)
$less-clear-white = rgba(255,255,255,.6)
$dark-grey = #333333
$lgt-grey = #444444
$lgt-lgt-grey = #b7b7b7
$red = #CA302A
$clear-red = rgba(202,48,42,.6)
$orange = #E18B00
$clear-orange = rgba(225,139,0,.6)
$yellow = #EEB300
$clear-yellow = rgba(238,179,0,.6)
$green = #5FB3AB
$clear-green = rgba(95,179,171,.6)
$blue = #357B96
$clear-blue = rgba(53,123,150,.6)
$violet = #6D1764
$clear-violet = rgba(109,23,100,.6)

//Futura-Heavy          700
//Futura-Book           400

a,
a:link,
a:visited,
a:hover,
a:active
  color inherit
  text-decoration none

h4,h5,h6,p,ol,ul
  line-height 1.3

h1
  margin 30px 0 20px 0
  line-height 1
  font-size 200%
  font-weight 300

h2
  margin 30px 0 20px 0
  line-height 1
  font-size 200%
  font-weight 300

p
  margin-bottom 10px
  &:last-of-type
    margin-bottom 20px
  a,
  a:link,
  a:visited,
  a:hover,
  a:active
    color inherit
    text-decoration underline

.text-left
  text-align left

.text-right
  text-align right

.text-center
  text-align center

.clear-fix
  clear both
  height 0

img
  max-width 100%

.red
  color $red

.orange
  color $orange

.yellow
  color $yellow

.green
  color $green

.blue
  color $blue

.violet
  color $violet

.red-back
  color $white
  background-color $clear-red

.orange-back
  color $white
  background-color $clear-orange

.yellow-back
  color $white
  background-color $clear-yellow

.green-back
  color $white
  background-color $clear-green

.blue-back
  color $white
  background-color $clear-blue

.violet-back
  color $white
  background-color $clear-violet

.italic
  font-style italic

.strike-through
  text-decoration line-through

html
  -webkit-font-smoothing: antialiased;

html, body
  margin 0 auto
  padding 0
  width 100%
  height auto
  font-size 16px
  letter-spacing -.5px
  line-height 1.3
  font-weight 400
  font-family 'Lato', sans-serif
  color $dark-grey
  overflow scroll
  overflow-x hidden
  overflow-y scroll


// HEADER //

.site-header
  overflow visible
  box-shadow 0 5px 5px -5px $lgt-grey
  z-index 9999

.site-branding
  display inline-block
  padding 10px

p.site-title
  display inline-block
  padding 0
  margin 0
  margin-left 10px
  font-size 20px
  text-transform lowercase
  vertical-align middle
  a:link, a:visited, a:hover, a:active
    text-decoration none

.branding-img-container
  display inline-block
  width 40px
  height 40px
  vertical-align middle
  border-radius 5px
  overflow hidden

.main-navigation
  display inline-block
  position absolute
  height 100%
  width auto
  right 7px
  top 0
  font-size 130%
  text-transform lowercase
  z-index 9999
  .header-sign-up
    display none
    margin 0 0 0 10px
    vertical-align middle
    &:hover
      color $white
      background $green
      border-color $white

.menu-toggle
  position absolute
  padding 0 0 30px
  top 11px
  right 5px
  font-size 15px
  border 0
  box-shadow none
  background $white
  &:focus, &:active
    box-shadow none

.menu-main-menu-container
  display block
  position absolute
  padding-bottom 10px
  top 100%
  right -7px
  height auto
  background $white
  box-shadow -5px 5px 5px -5px $lgt-grey
  & > .nav-menu
    height 100%
    li
      margin 0
      width 100%
      text-align right
      &:nth-child(1)
        &:hover, &.current-menu-item
          background $blue
          color $white
      &:nth-child(2)
        &:hover, &.current-menu-item
          background $green
          color $white
      &:nth-child(3)
        &:hover, &.current-menu-item
          background $yellow
          color $white
      &:nth-child(4)
        &:hover, &.current-menu-item
          background $violet
          color $white
      &:nth-child(5)
        &:hover, &.current-menu-item
          background $orange
          color $white
      &:nth-child(6)
        &:hover, &.current-menu-item
          background $red
          color $white
      > a
        padding 8px 20px 8px 40px


// PAGES //

.section
  > *
    &:last-child
      padding-bottom 30px
  .button
    border 2px solid $white
    color $white
    &:hover, &:focus
      border-color $white
      background $white
      color $dark-grey


// FRONT PAGE //

.hero-section
  padding-bottom 200px
  color $white
  font-size 120%
  text-align center
  background-image url('images/todoly.png')
  background-size 400px
  overflow hidden
  h1
    font-size 230%
  .iphone, .ipad
    position absolute
    top 0
  .iphone
    top 75px
    width 225px
    margin-left -50px
  .ipad
    top 20px
    width 700px
    margin-left 50px

.hero-button
  border-color $white
  border-width 2px
  &:hover, &:focus
    border-color $green
    background $green
    color $white

.section-two
  text-align center
  background $off-white
  h2, .large-icons
    font-size 300%
  .left-half, .right-half
    float right
  .left-half > img
    margin 40px auto
    max-width 75%
  ul
    margin 0 0 20px 0
    li
      margin-bottom 2px

.section-three
  text-align center
  color $white
  background $green
  h2
    margin-bottom 30px
    font-size 300%
  .button
    margin-bottom 30px
  .devices-image
    margin-left -4%



@import 'media-queries'
